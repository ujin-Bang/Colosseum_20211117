<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtWriterNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작성자닉네임" />

        <TextView
            android:id="@+id/txtSelectedSide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="(진영)" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtCreatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2021/08/08 오전 5시 7분" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/txtReplyContent"
        android:text="댓글 내용 자리"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D0D0D0"
        android:layout_marginTop="5dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <TextView
            android:padding="10dp"
            android:id="@+id/txtReplyCount"
            android:background="@drawable/gray_border_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="답글 : 0개" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:background="@drawable/gray_border_box"
            android:padding="10dp"
            android:id="@+id/txtLikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 : 0개" />

        <TextView
            android:background="@drawable/gray_border_box"
            android:padding="10dp"
            android:layout_marginStart="5dp"
            android:id="@+id/txtDislikeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="싫어요 : 0개" />


    </LinearLayout>

</LinearLayout>